{% extends 'base.html.twig' %}

{% block title %}Contatos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Contatos</h1>

    <table class="table table-striped">
        <tr>
            <th>Nome</th>
            <th>e-Mail</th>
            <th>Telefone</th>
            <th>Endereço</th>
            <th>Editar</th>
            <th>Excluir</th>
        </tr>
        {% for contato in contatos %}
            <tr>
                <td>{{ contato.nome }}</td>
                <td>{{ contato.email }}</td>
                <td>{{ contato.telefone }}</td>
                <td><a class="btn btn-success" href="endereco?id_contato={{ contato.id}}">Endereço</a></td>
                <td>
                    <a class="btn btn-primary" href="contato/edit?id_contato={{ contato.id}}">Editar</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="contato/delete/{{ contato.id}}">Excluir</a>
                </td>
            </tr>
        {% endfor %}
    </table>

</div>
{% endblock %}
